<h2>My SWISH list:</h2>
<div class="
      row">
    <div class="col-md-8">
      <div class="row">
        {{#each wishes}}
        <div class="col-md-4">
          <div class="card m-1">
            <img class="card-img-top" src="{{this.picture}}" alt="Card image cap" />
            <div class="card-body">
              <h5 class="card-title">{{this.name}}</h5>

              <p class="card-text">
                <strong>Description:</strong> {{this.description}} <br>
                <strong>Comment:</strong> {{this.comment}} <br>
                <strong>Price range:</strong> {{this.priceRange}} <br>
                <strong>End date:</strong> {{this.endDate}}
              </p>

              <a href="/wishes/{{this._id}}/delete" class="btn btn-danger">Delete</a>

              <a href="/wishes/{{this._id}}/edit" class="btn btn-dark">Edit</a>

            </div>
          </div>
          {{/each}}
        </div>
      </div>


      <div class="col-md-4">
        <h3>Add a SWISH</h3>
        <form action="/wishes/new" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Enter a name for your wish.">
          </div>
          <div class="form-group">
            <label for="picture">Picture</label>
            <input type="file" class="form-control" name="picture" placeholder="Enter a picture URL.">
          </div>

          <div class="form-group">
            <label for="description">Description</label>
            <input type="text" class="form-control" name="description" placeholder="Enter a short description of your wish.">
          </div>

          <div class="form-group">
            <label for="comment">Comment</label>
            <input type="text" class="form-control" name="comment" placeholder="Enter a short comment why you like it.">
          </div>

          <div class="form-group">
            <label for="priceRange">Price Range</label>
            <input type="text" class="form-control" name="priceRange" placeholder="What is the price range of your wish?">
          </div>

          <div class="form-group">
            <label for="endDate">End Date</label>
            <input type="text" class="form-control" name="endDate" placeholder="Is there an end date for your wish?">
          </div>

          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>